<p id="notice"><%= notice %></p>

<h1>Car Details</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Car Registration Number</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Color</th>
      <th>Road Tax Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_details.each do |car_detail| %>
      <tr>
        <td><%= car_detail.id %></td>
        <td><%= car_detail.user_id %></td>
        <td><%= car_detail.carRegistrationNumber %></td>
        <td><%= car_detail.manufacturer %></td>
        <td><%= car_detail.model %></td>
        <td><%= car_detail.color %></td>
        <td><%= car_detail.roadTaxNumber %></td>
        <td><%= link_to 'Show', car_detail %></td>
        <td><%= link_to 'Edit', edit_car_detail_path(car_detail) %></td>
        <td><%= link_to 'Destroy', car_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

